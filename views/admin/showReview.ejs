<!-- views/table.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    table {
      font-family: Arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>
  <title>Table Example</title>
</head>

<body> 
    <form action="">
        <input type="search" name="search" placeholder="Search here...">  
        <button>Submit</button>
    </form> 
     
  <h2>Show Reviews</h2>
  <table>
    <thead>
      <tr>
        <th>Sr. No</th>
        <th>User</th>
        <th>Category</th>
        <th>Product</th>
        <th>Rating</th>
        <th>Reviews</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < review.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= review[i].user %></td>
          <td><%= review[i].category.title %></td>
          <td><%= review[i].product.name %></td>
          <td><%= review[i].rating  %> star</td>
          <td><%= review[i].review %></td>
          <td>
            <a href="/admin/editreview/<%= review[i]._id %>">Edit</a>
            <a href="/admin/deletereview/<%= review[i]._id %>">Delete</a>

          </td>
         
        </tr>
      <% } %>
    </tbody>
  </table>
</body>

</html>
